<%- model_class = Menu -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div>
  <%= paginate @menus %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:release) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= link_to l(menu.release, :format=>:with_dayname), shop_menu_path(menu.shop, menu.release) %></td>
        <td><%= menu.title %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      shop_menu_path(menu.shop, menu.release), :class => 'btn btn-outline-primary btn-sm' %>
          <% if CONFIG["allow_edit"] %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shop_menu_path(menu.shop, menu), :class => 'btn btn-outline-primary' %>
          <% end %>
          <%# link_to t('.destroy', :default => t("helpers.links.destroy")),
                      menu_path(menu),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

