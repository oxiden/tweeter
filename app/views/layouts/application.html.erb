<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "今日のランチ" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%# favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%# favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%# favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%# favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body>

    <%= nav_bar :fluid => :top, :brand => "今日のランチ 2.0", :responsive => true do %>
        <%= menu_group do %>
            <%= menu_item "twitter", "https://twitter.com/tweet_lunch" %>
            <%# menu_divider %>
            <%= drop_down "Products" do %>
                <%= menu_item "セットメニューシリーズ", shop_menus_path(DEFAULT_SHOP_ID) + "?" + u("search[title_contains]") + "=" + u("とミニ") %>
                <%= menu_item "炒めシリーズ", shop_menus_path(DEFAULT_SHOP_ID) + "?" + u("search[title_contains]") + "=" + u("炒め") %>
                <%= menu_item "丼シリーズ", shop_menus_path(DEFAULT_SHOP_ID) + "?" + u("search[title_contains]") + "=" + u("丼") %>
            <% end %>
            <%= form_for(@search, :url => shop_menus_path(DEFAULT_SHOP_ID), :html => {:method => :get, :class=> "navbar-search pull-left"}) do |f| %>
                <%= f.text_field :title_contains, :class=>"search-query", :placeholder=>"Search Menus" %>
            <% end %>
        <% end %>
        <%= menu_group :pull => :right do %>
            <%= menu_item "About us", "https://github.com/oxiden" %>
            <%= menu_item "Contact", "https://github.com/oxiden" %>
        <% end %>
    <% end %>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Direct Link</li>
              <li><%= link_to "店リスト", shops_path %></li>
              <li><%= link_to "夕花のメニュー", shop_menus_path(1) %></li>
              <li><%# link_to "Link3", "/path3"  %></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div><!--/row-->

      <footer>
        <p>&copy; oxiden 2013</p>
      </footer>

    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
